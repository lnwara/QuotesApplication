@model Quotes.Models.ViewModel.CreateQuotesVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row ">
        <div class="col-md-4">
            <h1>Create Quote </h1>
        </div>

    </div>
</div>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="row ">
            <div class="col-10">
                <div class="row">
                    <div class="mb-3 col-6">
                        <label asp-for="@Model.Text"></label>
                        <textarea asp-for="@Model.Text" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Text" class="text-danger"></span>
                    </div>
                </div>
                <div class="row ">
                    <div class="mb-3 col-6">
                        <label asp-for="@Model.AuthorId"></label>
                        <select asp-for="@Model.AuthorId" asp-items="@Model.Authors" class="form-select">
                            <option disabled selected>--Select Author--</option>
                        </select>
                        <span asp-validation-for="@Model.AuthorId" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                            <a asp-controller="Quote" asp-action="Index" class="btn btn-secondary" style="width:150px">
                                Back
                            </a>
                        </div>
                        </div>
                    </div>
                </div>
        </div>

    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

