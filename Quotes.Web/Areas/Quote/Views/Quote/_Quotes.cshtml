@model IEnumerable<QuotesModel>


<div class="author-cards">

    @foreach (var obj in Model)
    {
        <div class="author-card author-card-1">
            <div class="container">

                <div class="row">
                    <div class="col-9">
                        <h6 style="color:#f29d79;">Author: @obj.Author.Name</h6>

                    </div>
                    <div class="col-3">
                        <a asp-controller="Quote" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i></a>
                        <a id="removeLink" onclick="remove(@obj.Id)"> <i class="bi bi-x-lg"></i></a>

                    </div>
                </div>

                <br />
                <div class="row">

                    <div class="col col-md-12">
                        <h5 style="overflow: scroll; white-space: pre-line; ">@obj.Text</h5>
                    </div>
                </div>

            </div>
        </div>
    }

</div>

@{ if (Model.Count() == 0)
    {
        @Html.Partial("_NoDataFound");
        
      }
}

