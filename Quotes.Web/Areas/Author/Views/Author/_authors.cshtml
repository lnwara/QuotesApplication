@model IEnumerable<AuthorModel>
    <div class="author-cards">

        @foreach (var obj in Model)
        {
            <div class="author-card author-card-1">
                <div class="row">

                    <div class="col-10">
                        <h1 class="card__title">@obj.Name</h1>
                    </div>
                    <div class="col-2">
                        <a onclick="remove(@obj.Id)"> <i class="bi bi-x-lg"></i></a>
                        <a asp-controller="Author" asp-action="Edit" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i></a>

                    </div>
                </div>

                <p class="card__apply">
                    <a asp-area="Quote" asp-controller="Quote" asp-action="Index" asp-route-id="@obj.Id"  class="card__link">Show Author's quotes <i class="fas fa-arrow-right"></i></a>
                </p>
            </div>
        }
        </div>
